{
    "singleQuote": true,
    "jsxSingleQuote": false,
    "tabWidth": 4,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always",
    "endOfLine": "crlf",
    "trailingComma": "all",
    "semi": false,
    "importOrder": ["^@core/(.*)$", "^@server/(.*)$", "^@ui/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,

    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-prisma"]
}
